@model FoxManager.ViewModels.BaseViewModel

<form class="form-inline" action="/updateteam/@Model.TeamViewModel.CurrentStudent.Name" method="post">
    <div class="form-group">
        <select name="id" class="form-control">
            @foreach (var team in Model.TeamViewModel.AllTeams)
            {
                <option value="@team.Id">@team.TeamName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Update team" name="teamname">
    </div>
    <button type="submit" class="btn btn-default">Update</button>
</form>