@model FoxManager.ViewModels.BaseViewModel
<nav class="navbar navbar-default">
    <div class="bg-success text-white">
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a class="navbar-brand" href="/home/@Model.CurrentStudent.Name">Home</a></li>
                <li><a class="navbar-brand" href="/teams/@Model.CurrentStudent.Name">Teams</a></li>
                <li><a class="navbar-brand" href="/classes/@Model.CurrentStudent.Name">Classes</a></li>
            </ul>
            <div class="navbar-btn navbar-right">
                <button type="button" class="btn btn-default navbar-btn" data-toggle="modal" data-target="#addClassModal">Add New Class </button>
                <div class="modal fade" id="addClassModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="exampleModalLabel">New Task</h4>
                            </div>
                            <div class="modal-body">
                                <form action="/addclass/@Model.CurrentStudent.Name" method="post">
                                    <div class="form-group">
                                        <label for="recipient-name" class="control-label">Add new class:</label>
                                        <input type="text" class="form-control" name="classname">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="control-label">Technology:</label>
                                        <input class="form-control" name="technology">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" value="submit" class="btn btn-success">Add</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-default navbar-btn" data-toggle="modal" data-target="#updateModal">Update Class</button>
                <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="exampleModalLabel">Update Task</h4>
                            </div>
                            <div class="modal-body">
                                <form action="/updateclass/@Model.CurrentStudent.Name" method="post">
                                    <div class="form-group">
                                        <select name="id" class="form-control">
                                            @foreach (var classes in Model.ClassViewModel.AllClass)
                                            {
                                                <option value="@classes.Id">@classes.ClassName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="recipient-name" class="control-label">Name:</label>
                                        <input type="text" class="form-control" name="classname">
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="control-label">Technology:</label>
                                        <input class="form-control" name="technology">
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" value="submit" class="btn btn-success">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

