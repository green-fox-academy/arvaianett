@model FoxManager.ViewModels.BaseViewModel

<form class="form-inline" action="/addclass/@Model.CurrentStudent.Name" method="post">
    <div class="form-group">
        <label class="sr-only">Add New Class</label>
        <input type="text" class="form-control" placeholder="Class" name="classname">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Technology" name="technology">
    </div>
    <button type="submit" class="btn btn-default">Add</button>
</form>
