@model Anagram.Models.AnagramModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Anagram</title>
    <link rel="stylesheet" type="text/css" href="~/style.css">
</head>
<body>
    @{ 
        string first = String.Concat(Model.FirstWord.OrderBy(c => c));
        string second = String.Concat(Model.SecondWord.OrderBy(c => c));

        if (first.Length == second.Length && first.Equals(second))
        {
            <p>True</p>
        }
        else
        {
            <p> False </p>
        }
    }
</body>
</html>
