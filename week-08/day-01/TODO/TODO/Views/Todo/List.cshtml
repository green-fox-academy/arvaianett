@model List<TODO.Models.Todo>
<html>
<head>
    <title>Todo</title>
</head>
<body>
    <h1>Todos for today:</h1>
    <form action="add" method="post">
        <input type="text" name="title" />
        <input type="text" name="isurgent" />
        <input type="text" name="isdone" />
        <input type="submit" value="submit" />
    </form>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Title</li>
        }
        <li>Start the day</li>
        <li>Finish H2 workshop1</li>
        <li>Finish JPA workshop2</li>
        <li>Create a CRUD project</li>
    </ul>
</body>
</html>
